<div id="values">
	<div >
		<div class="content">
			<h1 data-animated="flipInX" class="animated" >{{global.index.sections[0].title}}</h1>
			<div class="values">
			{% for item in global.index.sections[0].values %}
				<div class="item">
					<span class="icon animated"  data-animated="swing" >{{item.icon}}</span>
					<h3 class="animated"  data-animated="fadeInUp">{{item.title}}</h3>
					<p class="animated"  data-animated="fadeInUp">{{item.description}}</p>
				</div>
			{% endfor %}
			</div>
		</div>
	</div>
</div>